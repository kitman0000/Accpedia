<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="精准百科"
            app:titleEnabled="false"
            app:toolbarId="@+id/toolbar_Screach">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_Screach"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#000000"
                android:elevation="2dp"
                app:title="精准百科"
                app:titleTextColor="#ffffff"></android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/mainback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bk4"
        android:gravity="center">

        <Button
            android:id="@+id/ScreachButton_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/ScreachEditText_1"
            android:layout_toEndOf="@+id/ScreachEditText_1"
            android:layout_toRightOf="@+id/ScreachEditText_1"
            android:background="@drawable/mainshape"
            android:elevation="2dp"
            android:text="搜索"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="113dp" />

        <EditText
            android:id="@+id/ScreachEditText_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/mainshape"
            android:elevation="2dp"
            android:ems="10"
            android:hint="从世界寻找..."
            android:inputType="textPersonName" />

    </RelativeLayout>


    \
</LinearLayout>
